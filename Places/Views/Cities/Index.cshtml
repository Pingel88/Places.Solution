@{
  Layout = "_Layout";
}

@using Places.Models;
@model List<Places.Models.City>;

<h1>Cities</h1>

@if (@Model.Count == 0)
{
  <h3>No cities have been added yet!</h3>
}
<ul>
@foreach (City city in Model)
{
    <li>@Html.ActionLink($"{city.Name}", "Details", new { id = city.CityId })</li>
}
</ul>

<input type="button" class="btn btn-outline-success" value="Add a new city" onclick="location.href='@Url.Action("Create")'">
<input type="button" class="btn btn-outline-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">