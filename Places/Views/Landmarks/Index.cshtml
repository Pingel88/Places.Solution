@{
  Layout = "_Layout";
}

@using Places.Models;
@model List<Places.Models.Landmark>;

<h1>Landmarks</h1>

@if (@Model.Count == 0)
{
  <h3>No landmarks have been added yet!</h3>
}
<ul>
@foreach (Landmark landmark in Model)
{
    <li>@Html.ActionLink($"{landmark.Name}", "Details", new { id = landmark.LandmarkId })</li>
}
</ul>

<input type="button" class="btn btn-outline-success" value="Add a new landmark" onclick="location.href='@Url.Action("Create")'">
<input type="button" class="btn btn-outline-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">